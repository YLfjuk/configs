{
    "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "useButtonType": "off"
            }
        }
    }
}